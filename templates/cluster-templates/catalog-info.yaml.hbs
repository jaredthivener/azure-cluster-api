apiVersion: backstage.io/v1alpha1
kind: Resource
metadata:
  name: {{ parameters.clusterName }}
  description: AKS Cluster deployed via CAPI + Flux
  tags:
    - aks
    - kubernetes
    - cluster-api
  annotations:
    backstage.io/kubernetes-id: {{ parameters.clusterName }}
    backstage.io/kubernetes-namespace: default
    backstage.io/kubernetes-url: https://{{ parameters.clusterName }}.hcp.{{ parameters.region }}.azmk8s.io
    backstage.io/techdocs-ref: dir:.
spec:
  type: kubernetes-cluster
  owner: user:guest
  dependencyOf:
    - resource:{{ parameters.clusterName }}
